local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "ArceusX_GUI"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Главное окно
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 500, 0, 300)
mainFrame.Position = UDim2.new(0.5, -250, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.Visible = false
mainFrame.Parent = gui

local mainCorner = Instance.new("UICorner")
mainCorner.CornerRadius = UDim.new(0, 12)
mainCorner.Parent = mainFrame

-- Кнопка "Open"
local openBtn = Instance.new("TextButton")
openBtn.Size = UDim2.new(0, 120, 0, 40)
openBtn.Position = UDim2.new(0, 20, 0, 20)
openBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
openBtn.Text = "Open Menu"
openBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
openBtn.Parent = gui

local openCorner = Instance.new("UICorner")
openCorner.CornerRadius = UDim.new(0, 8)
openCorner.Parent = openBtn

-- Кнопка закрыть
local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0, 80, 0, 30)
closeBtn.Position = UDim2.new(1, -90, 0, 10)
closeBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
closeBtn.Text = "X"
closeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
closeBtn.Parent = mainFrame

local closeCorner = Instance.new("UICorner")
closeCorner.CornerRadius = UDim.new(0, 8)
closeCorner.Parent = closeBtn

-- Панель вкладок
local tabBar = Instance.new("Frame")
tabBar.Size = UDim2.new(0, 120, 1, -20)
tabBar.Position = UDim2.new(0, 10, 0, 50)
tabBar.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
tabBar.Parent = mainFrame

local tabCorner = Instance.new("UICorner")
tabCorner.CornerRadius = UDim.new(0, 8)
tabCorner.Parent = tabBar

-- Содержимое вкладок
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, -150, 1, -60)
contentFrame.Position = UDim2.new(0, 140, 0, 50)
contentFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
contentFrame.Parent = mainFrame

local contentCorner = Instance.new("UICorner")
contentCorner.CornerRadius = UDim.new(0, 8)
contentCorner.Parent = contentFrame

-- Функция для создания вкладки
local function createTab(name)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -20, 0, 40)
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.Text = name
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Parent = tabBar

    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 8)
    btnCorner.Parent = btn

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundTransparency = 1
    frame.Visible = false
    frame.Parent = contentFrame

    btn.MouseButton1Click:Connect(function()
        for _, tab in pairs(contentFrame:GetChildren()) do
            if tab:IsA("Frame") then
                tab.Visible = false
            end
        end
        frame.Visible = true
    end)

    return frame
end

-- Создаём вкладки
local tab1 = createTab("Scripts")
local tab2 = createTab("Player")
local tab3 = createTab("Misc")

-- Пример кнопки внутри вкладки Scripts
local scriptBtn = Instance.new("TextButton")
scriptBtn.Size = UDim2.new(0, 140, 0, 40)
scriptBtn.Position = UDim2.new(0, 20, 0, 20)
scriptBtn.BackgroundColor3 = Color3.fromRGB(70, 130, 200)
scriptBtn.Text = "Run Example"
scriptBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
scriptBtn.Parent = tab1

local scriptCorner = Instance.new("UICorner")
scriptCorner.CornerRadius = UDim.new(0, 8)
scriptCorner.Parent = scriptBtn

scriptBtn.MouseButton1Click:Connect(function()
    print("Пример скрипта запущен!")
    -- сюда можно вставить loadstring(game:HttpGet(...))()
end)

-- Вкладка Player с кнопкой JumpPower
local jpBtn = Instance.new("TextButton")
jpBtn.Size = UDim2.new(0, 140, 0, 40)
jpBtn.Position = UDim2.new(0, 20, 0, 20)
jpBtn.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
jpBtn.Text = "JumpPower +200"
jpBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
jpBtn.Parent = tab2

local jpCorner = Instance.new("UICorner")
jpCorner.CornerRadius = UDim.new(0, 8)
jpCorner.Parent = jpBtn

jpBtn.MouseButton1Click:Connect(function()
    local char = player.Character or player.CharacterAdded:Wait()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if humanoid then
        humanoid.JumpPower = humanoid.JumpPower + 200
    end
end)

-- Вкладка Misc с кнопкой Speed
local spdBtn = Instance.new("TextButton")
spdBtn.Size = UDim2.new(0, 140, 0, 40)
spdBtn.Position = UDim2.new(0, 20, 0, 20)
spdBtn.BackgroundColor3 = Color3.fromRGB(200, 100, 100)
spdBtn.Text = "Speed +50"
spdBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
spdBtn.Parent = tab3

local spdCorner = Instance.new("UICorner")
spdCorner.CornerRadius = UDim.new(0, 8)
spdCorner.Parent = spdBtn

spdBtn.MouseButton1Click:Connect(function()
    local char = player.Character or player.CharacterAdded:Wait()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if humanoid then
        humanoid.WalkSpeed = humanoid.WalkSpeed + 50
    end
end)

-- Кнопки открыть/закрыть
openBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
end)

closeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
end)

-- Делаем первую вкладку активной по умолчанию
for _, frame in pairs(contentFrame:GetChildren()) do
    if frame:IsA("Frame") then
        frame.Visible = false
    end
end
tab1.Visible = true
